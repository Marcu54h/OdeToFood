@using OdeToFood.Core
@model Restaurant

<div>
    <div>
        <h3>@Model.Name</h3>
    </div>
    <div>
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn" asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="btn-block">Szczegóły</i>
        </a>
        <a class="btn btn" asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="btn-block">Edycja</i>
        </a>
        <a class="btn btn" asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="btn-block">Usuń</i>
        </a>
    </div>
</div>